{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "prCreation": "not-pending",
  "minimumReleaseAge": "3 days",
  "semanticCommits": "enabled",
  "packageRules": [{
    "matchUpdateTypes": ["minor", "patch", "digest"],
    "automerge": true,
  }]
}
